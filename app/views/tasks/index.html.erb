<h1>Tasks</h1>

<div class="task-list">
  <% @tasks.each do |task| %>
    <%# checkbox to show if task is completed%>
    <input type="checkbox" name="id-<%= task.id %>"
      <% if task.completed %>
        <%= "checked" %>
      <% end %>>
    <%# task title as link - redirects to task's show page%>
    <label for="<%= task.id %>">
      <%= link_to task.title, task_path(task.id) %>
    </label>
    <%# link to task's destroy page %>
    <%= link_to ('<i class="fa-solid fa-trash-can"></i>').html_safe, destroy_task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{task.title}?"} %>
  <% end %>
</div>
<%= link_to 'Add a new task', new_task_path %>
